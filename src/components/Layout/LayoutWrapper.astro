---
const title = import.meta.env.TITLE
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			html,
			body {
				font-family: system-ui;
				margin: 0;
			}
			body {
				padding: 1.5rem 7rem;
			}
		</style>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
